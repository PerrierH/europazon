            color: <?= /* @noEscape */ $style['number_color'] ?>;
        }

        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .mp-countdown-minutes {
            color: <?= /* @noEscape */ $style['number_color'] ?>;
